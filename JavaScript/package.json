{
  "name": "@arcweave/arcscript",
  "version": "1.0.8",
  "description": "An interpreter for arcscript using antlr4",
  "browser": "dist/arcscript.js",
  "main": "dist/arcscript.mjs",
  "types": "src/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "grammar": "sh generate.sh",
    "grammar:clean": "sh clean.sh"
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "import": "./dist/arcscript.mjs",
      "require": "./dist/arcscript.cjs",
      "default": "./dist/arcscript.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arcweave/arcscript-interpreters.git"
  },
  "keywords": [
    "arcweave",
    "arcscript",
    "antlr4"
  ],
  "author": "Arcweave",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arcweave/arcscript-interpreters/issues"
  },
  "homepage": "https://github.com/arcweave/arcscript-interpreters#readme",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.7",
    "@types/node": "^20.10.6",
    "babel-loader": "^9.1.3",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-webpack-plugin": "^4.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "process": "^0.11.10",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "antlr4": "^4.13.1",
    "bignumber.js": "^9.1.2",
    "core-js": "^3.35.0",
    "lodash.clonedeep": "^4.5.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "prettier/prettier": 1,
      "no-console": "off",
      "no-unused-vars": "off",
      "no-alert": "off",
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "class-methods-use-this": "off",
      "no-shadow": [
        "error",
        {
          "allow": [
            "state",
            "getters"
          ]
        }
      ],
      "no-undef": "warn",
      "no-param-reassign": "off"
    },
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "settings": {
      "import/resolver": {
        "alias": {
          "map": [
            [
              "@",
              "./src"
            ]
          ],
          "extensions": [
            ".js",
            ".json"
          ]
        }
      }
    },
    "ignorePatterns": [
      "src/Generated/*.js",
      "!src/Generated/*Base.js"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "tabWidth": 4
        }
      }
    ],
    "useTabs": false,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!antlr4)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testEnvironment": "jsdom"
  }
}
